<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ibrahim.youtubedl_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name="com.ibrahim.youtubedl_android.App"
        android:allowBackup="false"
        android:extractNativeLibs="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ibrahim.youtubedl_android.TextSpeech"></activity>
        <activity android:name="com.ibrahim.youtubedl_android.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ibrahim.youtubedl_android.StreamingExampleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibrahim.youtubedl_android.DownloadingExampleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ibrahim.youtubedl_android.CommandExampleActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>